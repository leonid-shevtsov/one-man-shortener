%h1 All uploaded images
%p
  %a{:href => '/upload'} Upload another
%table{:width => '100%'}
  -images.each do |image|
    %tr
      %td
        %a{:href => "/uploads/#{image[:descriptive_slug]}"}
          =html_escape image[:caption]
      %td
        %a{:href => "/i/#{image[:slug]}"}
          =html_escape "http://#{request.host}/i/#{image[:slug]}"
      %td
        =image[:created_at]
      %td
        =counts[image[:id]] || 0
      %td
        %a{:href => "/stats/i/#{image[:slug]}"}
          Stats
